<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:padding="40dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_ble_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_222222"
            android:textSize="18sp"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_ble_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_222222"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:background="@drawable/bg_ble_list_item"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Switch
            android:id="@+id/sawtooth"
            android:text="弹窗开关"
            android:textSize="18sp"
            android:switchPadding="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="40dp">

            <TextView
                android:text="序列号："
                android:textSize="17sp"
                android:textColor="@color/color_222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:background="@drawable/bg_ble_list_item"
                android:backgroundTint="#eee"
                android:gravity="center"
                android:id="@+id/tv_sn"
                android:textSize="16sp"
                android:textColor="@color/color_222222"
                android:paddingStart="5dp"
                android:text=""
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_modify"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:text="修改"
                android:backgroundTint="@color/color_444444"
                android:background="@drawable/bg_ble_list_item"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

       <LinearLayout
           android:layout_marginTop="40dp"
           android:orientation="vertical"
           android:layout_width="300dp"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/tv_confirm"
               android:layout_gravity="center_horizontal"
               android:gravity="center"
               android:background="@drawable/bg_ble_list_item"
               android:paddingStart="35dp"
               android:paddingEnd="35dp"
               android:paddingBottom="10dp"
               android:paddingTop="10dp"
               android:backgroundTint="@color/color_444444"
               android:text="确认修改"
               android:textColor="@color/white"
               android:layout_width="match_parent"
               android:layout_height="50dp"/>
           <TextView
               android:id="@+id/tv_cancel"
               android:layout_gravity="right"
               android:gravity="center"
               android:layout_marginTop="20dp"
               android:background="@drawable/bg_ble_list_item"
               android:paddingStart="35dp"
               android:paddingEnd="35dp"
               android:paddingBottom="10dp"
               android:paddingTop="10dp"
               android:backgroundTint="@color/color_fc6d7c"
               android:text="取消"
               android:textColor="@color/color_222222"
               android:layout_width="match_parent"
               android:layout_height="50dp"/>

       </LinearLayout>

    </LinearLayout>

</RelativeLayout>